@model COVID.Controllers.HomeController.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .percent-box {
        top: 10px;
        font-size: 15px;
    }

    .inner p {
        text-align: left;
        margin-bottom: 10px;
        font-size: 15px;
    }

    .fa-level-up-alt {
        color: #ffd800;
    }

    .fa-angle-double-up {
        color: #ffd800;
        font-size: 40px;
    }

    .titulo h1 {
        font-family: "Lucida Grande", "Lucida Sans Unicode", "Arial, Helvetica", "sans-serif";
        color: #333333;
    }

    .inner small {
        top: -10px;
    }

    .second-box {
        border-left: 5px solid #f3f3f4
    }

    .color-laranja {
        color: #f3f3f4;
        /*font-weight: 700;*/
    }
</style>
<div class="col-md-12">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-4">
                    <div class="small-box bg-cor7">
                        <div class="inner" style="text-align: center">
                            <p>TOTAL DE MORTES</p>
                            <h3>@(Model.TB01.Where(x=> x.city_ibge_code != 12).Sum(x =>Convert.ToInt32( x.last_available_deaths)).ToString("N0")) <span style="font-size: 27px;"></span></h3>
                            <small></small>
                        </div>
                        <div class="percent-box"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="small-box bg-cor7">
                        <div class="inner" style="text-align: center">
                            <p>Últimas confirmações de casos de COVID19</p>
                            <h3>@(Model.TB01.Where(x=> x.city_ibge_code != 12).Sum(x =>Convert.ToInt64( x.last_available_confirmed)).ToString("N0")) <span style="font-size: 27px;"></span></h3>
                            <small></small>
                        </div>
                        <div class="percent-box"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="small-box bg-cor7">
                        <div class="inner" style="text-align: center">
                            <p>Últimas confirmações de Morte por COVID19</p>
                            <h3>@(Model.TB01.Where(x=> x.city_ibge_code != 12).Sum(x =>Convert.ToInt64( x.new_confirmed)).ToString("N0")) <span style="font-size: 27px;"></span></h3>
                            <small></small>
                        </div>
                        <div class="percent-box"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 shadow-graph" style="margin-top:15px">
    <figure class="highcharts-figure">
        <div style="height:350px" id="visao-online"></div>
    </figure>
</div>

@section scripts{ 
    <script src="~/lib/highcharts/highcharts.min.js"></script>
    <script type="text/javascript">

    var charOnlineSite = Highcharts.chart('visao-online', {
                chart: {
                    type: 'line',
                    zoomType: 'xy'
                },
                title: {
                    text: 'Visão Online Casos Confirmados COVID19'
                },
                xAxis: {
                    categories:  [@Html.Raw("'" + String.Join("','", Model.TB01.Select(s => s.date).Distinct()) + "'")]
                },
                yAxis: {
                    title: {
                        text: 'Casos Confirmados'
                    },
                    min:0
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: false
                        },
                    }
                },
                credits: {
                    enabled: false
                },
                 series: [{
                     name: 'São Paulo',
                      data: [@Html.Raw(String.Join(",", Model.TB01.Where(w => w.state == "SP" && w.city_ibge_code != 12).Select(s => s.last_available_confirmed == null ? "null" : s.last_available_confirmed.ToString())))]
                },{
                         name: 'Distrito Federal',
